@model Hotel.Models.poco.Quarto
 
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Quarto</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuarNumero)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuarNumero)
            @Html.ValidationMessageFor(model => model.QuarNumero)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuarDescricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuarDescricao)
            @Html.ValidationMessageFor(model => model.QuarDescricao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuarValorDia)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuarValorDia)
            @Html.ValidationMessageFor(model => model.QuarValorDia)
        </div>
        <div class="ui-selectable-helper">
            <h4>Status</h4>
            @Html.DropDownListFor(model => model.QuarStatus, (IEnumerable<SelectListItem>) ViewBag.listaStatusQuarto)
